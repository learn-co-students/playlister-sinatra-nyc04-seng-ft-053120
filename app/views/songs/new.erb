<h1>Add New Songs!</h1>

<form action="/songs" method="POST">    
    <label for="artist_name">Artist Name:</label><br>
    <input type="text" id="artist_name" name="artist_name">
    <br>
    <label for="song_name">Song Name:</label><br>
    <input type="text" id="song_name" name="song_name">
    <br>
    <label>Genres </label>
        <% Genre.all.each do |genre|%>
            <label><%= genre.name %></label>
            <input id="<%genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
        <% end %>

   <button type="submit">Create!</button>
</form>